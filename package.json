{
  "name": "use-jtools",
  "version": "1.0.0",
  "description": "This is a web side commonly used tools.",
  "author": "Jason",
  "type": "module",
  "scripts": {
    "start": "ts-node ./src/main.ts",
    "dev": "nodemon --watch src -e ts --exec ts-node ./src/main.ts",
    "build": "webpack --config webpack.prod.cjs",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "prepare": "npx husky install",
    "pre-commit": "npx husky add .husky/pre-commit \"npm run lint\"",
    "commitlint": "npx husky add .husky/commit-msg 'npx --no -- commitlint --edit ${1}'"
  },
  "devDependencies": {
    "@babel/core": "^7.22.20",
    "@babel/preset-env": "^7.22.20",
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/node": "^20.6.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "babel-loader": "^9.1.3",
    "clean-webpack-plugin": "^4.0.0",
    "commitlint": "^17.7.1",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.32.2",
    "eslint": "^8.49.0",
    "husky": "^8.0.3",
    "nodemon": "^3.0.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
